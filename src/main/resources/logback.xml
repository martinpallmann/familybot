<configuration>

  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">

    <encoder>
      <pattern>%highlight(%-5level) %cyan(%logger)\n%msg%n</pattern>
    </encoder>
  </appender>

  <logger name="familybot" level="DEBUG" />

  <root level="info">
    <appender-ref ref="stdout" />
  </root>
</configuration>